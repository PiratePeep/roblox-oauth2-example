generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" //env("DATABASE_URL") //You'll need to set the DATABASE_URL env var to a valid database connection string
}

model User {
  id        String    @id
  username  String    @unique
  nickname  String?
  createdAt Int
  profile   String
  picture   String
  sessions  Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
